@model IEnumerable<vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table id="movie" class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Movies</td>
            <td>Genre</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            
            var table = $("#movie").DataTable({
                ajax: {
                    url: "/api/Movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    },
                ]
            });
        });
    </script>
}